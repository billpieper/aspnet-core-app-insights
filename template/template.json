{
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string"
    },
    "hostingEnvironment": {
      "type": "string",
      "defaultValue": ""
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "East US",
        "North Europe",
        "South Central US",
        "Southeast Asia",
        "West Europe",
        "West US 2"
      ],
      "metadata": {
        "description": "Application Insights has to be supported in this location."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Standard"
    },
    "skuCode": {
      "type": "string",
      "defaultValue": "S1"
    },
    "workerSize": {
      "type": "string",
      "defaultValue": "0"
    },
    "subscriptionId": {
      "type": "string"
    }
  },
  "variables": {
    "senderRuleName": "Sender",
    "listenerRuleName": "Listener",
    "syncEventThreeTopicName": "sync-event-three",
    "serviceBusNamespaceResourceName": "[concat('Microsoft.ServiceBus/namespaces/', parameters('siteName'))]",
    "sampleWorkerSubscriptionName": "sample-worker",
    "serviceBusApiVersion": "2017-04-01"
  },
  "resources": [
    {
      "name": "[parameters('siteName')]",
      "type": "Microsoft.Web/sites",
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
        "[resourceId('microsoft.insights/components/', parameters('siteName'))]",
        "[concat('Microsoft.ServiceBus/namespaces/', parameters('siteName'))]"
      ],
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components/', parameters('siteName')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "ServiceBus:ConnectionString",
              "value": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/topics/authorizationRules', parameters('siteName'), variables('syncEventThreeTopicName'), variables('SenderRuleName')), variables('serviceBusApiVersion')).primaryConnectionString]"
            },
            {
              "name": "ServiceBus:Topic",
              "value": "[variables('syncEventThreeTopicName')]"
            }
          ],
          "phpVersion": "Off",
          "use32BitWorkerProcess": false
        },
        "name": "[parameters('siteName')]",
        "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
        "hostingEnvironment": "[parameters('hostingEnvironment')]",
        "clientAffinityEnabled": false
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "Staging",
          "type": "slots",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]"
          ],
          "properties": {}
        }
      ],
      "apiVersion": "2016-03-01",
      "location": "[parameters('location')]",
      "tags": {
        "[concat('hidden-related:', '/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "empty"
      }
    },
    {
      "apiVersion": "2016-09-01",
      "name": "[parameters('hostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "properties": {
        "name": "[parameters('hostingPlanName')]",
        "workerSizeId": "[parameters('workerSize')]",
        "reserved": false,
        "numberOfWorkers": "1",
        "hostingEnvironment": "[parameters('hostingEnvironment')]"
      },
      "sku": {
        "Tier": "[parameters('sku')]",
        "Name": "[parameters('skuCode')]"
      }
    },
    {
      "apiVersion": "2015-05-01",
      "name": "[parameters('siteName')]",
      "type": "microsoft.insights/components",
      "location": "[parameters('location')]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('siteName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('siteName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "sku": {
          "name": "Standard",
          "tier": "Standard"
      },
      "name": "[parameters('siteName')]",
      "apiVersion": "[variables('serviceBusApiVersion')]",
      "location": "[parameters('location')]",
      "tags": {},
      "scale": null,
      "properties": {},
      "dependsOn": [],
      "resources": [
        {
          "apiVersion": "[variables('serviceBusApiVersion')]",
          "name": "[variables('listenerRuleName')]",
          "type": "AuthorizationRules",
          "dependsOn": [
            "[variables('serviceBusNamespaceResourceName')]"
          ],
          "properties": {
            "rights": ["Listen"]
          }
        },
        {
          "apiVersion": "[variables('serviceBusApiVersion')]",
          "name": "[variables('syncEventThreeTopicName')]",
          "type": "Topics",
          "dependsOn": [
            "[variables('serviceBusNamespaceResourceName')]"
          ],
          "properties": {
            "defaultMessageTimeToLive": "P10675199DT2H48M5.4775807S",
            "maxSizeInMegabytes": "1024",
            "requiresDuplicateDetection": "false",
            "enableBatchedOperations": "false",
            "supportOrdering": "false",
            "autoDeleteOnIdle": "P10675199DT2H48M5.4775807S",
            "enablePartitioning": "false",
            "enableExpress": "false"
          },
          "resources": [
            {
              "apiVersion": "[variables('serviceBusApiVersion')]",
              "name": "[variables('sampleWorkerSubscriptionName')]",
              "type": "Subscriptions",
              "dependsOn": [
                "[variables('syncEventThreeTopicName')]"
              ],
              "properties": {
                "lockDuration": "PT1M",
                "requiresSession": "false",
                "defaultMessageTimeToLive": "P10675199DT2H48M5.4775807S",
                "deadLetteringOnMessageExpiration": "false",
                "maxDeliveryCount": "10",
                "enableBatchedOperations": "false",
                "autoDeleteOnIdle": "P10675199DT2H48M5.4775807S"
              }
            },
            {
              "apiVersion": "[variables('serviceBusApiVersion')]",
              "name": "[variables('senderRuleName')]",
              "type": "AuthorizationRules",
              "dependsOn": [
                "[variables('syncEventThreeTopicName')]"
              ],
              "properties": {
                "rights": ["Send"]
              }
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0"
}
